<!DOCTYPE html>
<html>
  <head>
    <title>JointDev0318</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <%# ヘッダー %>
      <header class="mb-2">  
        <%= render 'texts/nav', { header: true} %>
      </header>
      <%# Flash messages %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
  
      <div class="container">
        <%= yield %>
      </div>

      <%# フッター %>
      <footer>
        <%= render 'texts/nav', { header: false } %>
      </footer>
    </div>
  </body>
</html>
