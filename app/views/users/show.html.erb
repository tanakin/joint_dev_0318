<div class="container">
  <h1>理解度チャート</h1>
  <canvas id="myChart" class="mb-5"></canvas>

  <div class="mx-auto w-75">
    <table class="table table-hover mb-5">
      <tr class="table-info text-center"><th>再復習テキスト一覧</th></tr>
      <% @text_replay.each do |replay| %>
        <tr><td><%= link_to replay.title, text_path(replay.id), class: "d-block" %></td></tr>
      <% end %>
    </table>
    <table class="table table-hover">
      <tr class="table-info text-center"><th>未履修テキスト一覧</th></tr>
      <% @text_not_read.each do |not_read| %>
        <tr><td><%= link_to not_read.title, text_path(not_read.id), class: "d-block" %></td></tr>
      <% end %>
    </table>
  </div>
</div>